{% extends 'base.html.twig' %}

{% block title %}Contact{% endblock %}

{% block content %}
{# Entête du formulaire #}
<div class="container">
    <div class="text-center mb-5 header">
        <h1>Contact</h1>
        <p>Une suggestion, une question ?</p>
    </div>

{# Formulaire de contact #}
    <div class="form text-center">
        <form method="POST" class="justify-content-center">
            <div class="form-group row justify-content-center">
                <label class="text-left col-4 col-md-3">Nom :</label>
                <input class="text-left col-6 col-md-3"></input>
            </div>
            <div class="form-group row justify-content-center">
                <label class="text-left col-4 col-md-3">Prénom :</label>
                <input class="text-left col-6 col-md-3"></input>
            </div>
            <div class="form-group row justify-content-center">
                <label class="text-left col-4 col-md-3">Email :</label>
                <input class="text-left col-6 col-md-3"></input>
            </div>
            <div class="form-group row justify-content-center">
                <label class="text-left col-4 col-md-3">Objet :</label>
                <input class="text-left col-6 col-md-3"></input>
            </div>
            <div class="form-group row justify-content-center">
                <label class="text-left col-4 col-md-3">Message :</label>
                <textarea class="textinput text-left col-6 col-md-3"></textarea>
            </div>
            <div class="text-center mt-5 form-button">
                <button type="submit" class="btn btn-danger">Envoyer</button>
            </div>
        </form>
    </div>
</div>













{% endblock %}

{% block js %} {% endblock %}
